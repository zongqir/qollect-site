---
import { useTranslations } from '../i18n/utils';

const t = useTranslations(Astro.url);
---

<section class="relative min-h-screen flex items-center justify-center pt-16 hero-grid-bg overflow-hidden">
  <div class="hero-radial-glow absolute inset-0 pointer-events-none"></div>

  <div class="relative z-10 max-w-6xl mx-auto px-6 text-center">
    <h1 class="text-5xl md:text-7xl font-extrabold leading-tight animate-hero">
      <span class="gradient-text">{t('hero.title')}</span>
    </h1>

    <p class="mt-6 text-lg md:text-xl text-text-secondary max-w-2xl mx-auto animate-hero-delay">
      {t('hero.subtitle')}
    </p>

    <div class="mt-10 flex flex-wrap items-center justify-center gap-4 animate-hero-delay-2">
      <a
        href="#download"
        class="btn-glow inline-flex items-center gap-2"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        {t('hero.downloadFor')} {t('hero.windows')} / {t('hero.macos')} / {t('hero.linux')}
      </a>
      <a
        href="https://github.com/Clarkkkk/qollect"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-glow-outline inline-flex items-center gap-2"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        {t('hero.starOnGithub')}
      </a>
    </div>

    <!-- Product screenshot placeholder -->
    <div class="mt-16 perspective-screenshot max-w-4xl mx-auto animate-hero-delay-2">
      <div class="glass-card p-2">
        <div class="bg-bg-secondary rounded-lg aspect-video flex items-center justify-center text-text-muted">
          <div class="text-center">
            <svg class="w-16 h-16 mx-auto mb-4 opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <p class="text-sm">Screenshot</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
