---
import { useTranslations, getLangFromUrl } from '../i18n/utils';

const t = useTranslations(Astro.url);
const lang = getLangFromUrl(Astro.url);
const imgSuffix = lang === 'en' ? 'en' : 'zh';
const base = import.meta.env.BASE_URL;

const features = [
  {
    title: t('features.history.title'),
    description: t('features.history.description'),
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
    image: `${base}screenshots/history-${imgSuffix}.png`,
  },
  {
    title: t('features.ai.title'),
    description: t('features.ai.description'),
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>`,
    image: `${base}screenshots/ai-${imgSuffix}.png`,
  },
  {
    title: t('features.workbench.title'),
    description: t('features.workbench.description'),
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" /></svg>`,
    image: `${base}screenshots/workbench-${imgSuffix}.png`,
  },
  {
    title: t('features.crossPlatform.title'),
    description: t('features.crossPlatform.description'),
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>`,
    image: null,
  },
];
---

<section id="features" class="max-w-6xl mx-auto px-6">
  <h2 class="text-3xl md:text-4xl font-bold text-center mb-16 animate-on-scroll">
    <span class="gradient-text">{t('features.sectionTitle')}</span>
  </h2>

  <div class="space-y-24">
    {features.map((feature, i) => (
      <div class={`flex flex-col md:flex-row items-center gap-12 animate-on-scroll ${i % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
        <div class={`${feature.image ? 'flex-1' : 'w-full text-center'} space-y-4`}>
          <div class={`inline-flex items-center justify-center w-14 h-14 rounded-xl bg-accent-blue/10 text-accent-blue ${!feature.image ? 'mx-auto' : ''}`}>
            <Fragment set:html={feature.icon} />
          </div>
          <h3 class="text-2xl font-bold text-text-primary">{feature.title}</h3>
          <p class="text-text-secondary leading-relaxed">{feature.description}</p>
        </div>
        {feature.image && (
          <div class="flex-1 w-full">
            <div class="glass-card p-2">
              <img src={feature.image} alt={feature.title} class="rounded-lg w-full" loading="lazy" />
            </div>
          </div>
        )}
      </div>
    ))}
  </div>
</section>
