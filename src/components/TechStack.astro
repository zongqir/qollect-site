  <p class="text-xl text-text-secondary mb-4 animate-on-scroll">{t('tech.subtitle')}</p>
  <p class="text-text-muted mb-12 max-w-xl mx-auto animate-on-scroll">{t('tech.description')}</p>

  <div class="flex flex-wrap items-center justify-center gap-8 animate-on-scroll">
    {techs.map((tech) => (
      <div class="glass-card hover-glow flex flex-col items-center gap-3 px-8 py-6 min-w-[140px]">
        <div style={`color: ${tech.color}`}>
