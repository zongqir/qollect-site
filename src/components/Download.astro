---

<section id="download" class="max-w-4xl mx-auto px-6 text-center">
  <h2 class="text-3xl md:text-4xl font-bold mb-4 animate-on-scroll">
    <span class="gradient-text">{t('download.sectionTitle')}</span>
  </h2>
  <p class="text-text-secondary mb-2 animate-on-scroll">{t('download.subtitle')}</p>
  <p class="text-sm text-text-muted mb-12 animate-on-scroll">
    {t('download.version')}: <span id="dl-version">v{FALLBACK_VERSION}</span>
  </p>

  <div class="flex flex-wrap items-center justify-center gap-6 animate-on-scroll">
    <a id="dl-windows" href={`https://dl.135070.xyz/releases/v${FALLBACK_VERSION}/Qollect_${FALLBACK_VERSION}_x64-setup.exe`}
      target="_blank" rel="noopener noreferrer"
      class="btn-glow inline-flex items-center gap-3 px-8 py-4 text-lg">
      <Fragment set:html={icons.windows} />
      {t('download.windows')}
    </a>
    <a id="dl-macos" href={`https://dl.135070.xyz/releases/v${FALLBACK_VERSION}/Qollect_universal.app.tar.gz`}
      target="_blank" rel="noopener noreferrer"
      class="btn-glow inline-flex items-center gap-3 px-8 py-4 text-lg">
      <Fragment set:html={icons.macos} />
      {t('download.macos')}
    </a>
    <span class="btn-glow inline-flex items-center gap-3 px-8 py-4 text-lg opacity-50 cursor-not-allowed">
      <Fragment set:html={icons.linux} />
      {t('download.linux')}
    </span>
  </div>
</section>

<script>
  const R2_BASE = 'https://dl.135070.xyz';

  fetch(`${R2_BASE}/latest.json?t=${Date.now()}`, { cache: 'no-store' })
    .then(r => {
      if (!r.ok) throw new Error(`latest.json status ${r.status}`);
      return r.json();
    })
    .then(data => {
      const version = String(data.version || '').replace(/^v/, '');
      if (!version) return;

      document.getElementById('dl-version').textContent = `v${version}`;

      const base = `${R2_BASE}/releases/v${version}`;
      const platforms = data.platforms || {};
      const links = {
        'dl-windows': platforms['windows-x86_64-nsis']?.url || platforms['windows-x86_64']?.url || `${base}/Qollect_${version}_x64-setup.exe`,
        'dl-macos': platforms['darwin-universal']?.url || platforms['darwin-universal-app']?.url || `${base}/Qollect_universal.app.tar.gz`,
      };
      for (const [id, href] of Object.entries(links)) {
        const el = document.getElementById(id);
        if (el) el.href = href;
      }
    })
    .catch((error) => {
      console.warn('[download] failed to load latest.json, using fallback version', error);
    });
</script>
