---
import { useTranslations, getAlternateUrl } from '../i18n/utils';

const t = useTranslations(Astro.url);
const altUrl = getAlternateUrl(Astro.url);
---

<a href={altUrl} class="px-3 py-1.5 text-sm rounded-lg border border-white/10 text-text-secondary hover:text-text-primary hover:border-accent-blue/50 transition-all">
  {t('lang.switch')}
</a>
