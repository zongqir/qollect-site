---
import { useTranslations } from '../i18n/utils';

const t = useTranslations(Astro.url);
const year = new Date().getFullYear();
const base = import.meta.env.BASE_URL;
---

<footer class="border-t border-white/5 mt-20">
  <div class="max-w-6xl mx-auto px-6 py-12 flex flex-col md:flex-row items-center justify-between gap-6">
    <div class="flex items-center gap-3">
      <img src={`${base}qollect-logo.svg`} alt="Qollect" class="w-8 h-8 rounded-lg" />
      <div>
        <span class="font-bold text-text-primary">Qollect</span>
        <span class="text-text-muted text-sm ml-2">{t('footer.slogan')}</span>
      </div>
    </div>

    <div class="flex items-center gap-6 text-sm text-text-muted">
      <span>&copy; {year} {t('footer.copyright')}</span>
    </div>
  </div>
</footer>
