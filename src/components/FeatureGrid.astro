---

<section class="max-w-6xl mx-auto px-6">
  <h2 class="text-3xl md:text-4xl font-bold text-center mb-16 animate-on-scroll">
    <span class="gradient-text">{t('grid.sectionTitle')}</span>
  </h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {items.map((item, i) => (
      <div class={`glass-card hover-glow p-6 animate-on-scroll stagger-${i + 1}`}>
        <div class="inline-flex items-center justify-center w-10 h-10 rounded-lg bg-accent-blue/10 text-accent-blue mb-4">
          <Fragment set:html={item.icon} />
        </div>
        <h3 class="text-lg font-semibold text-text-primary mb-2">
          {t(`grid.${item.key}.title` as any)}
        </h3>
        <p class="text-sm text-text-secondary">
          {t(`grid.${item.key}.description` as any)}
        </p>
      </div>
    ))}
  </div>
</section>
